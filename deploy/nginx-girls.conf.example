# Пример конфига для zhdanov.uno/girls/
# Скопировать в /etc/nginx/sites-available/ или включить в основной конфиг сервера.

# Статика: после деплоя в /var/www/girls лежат frontend/ и backend/
location /girls/ {
    alias /var/www/girls/frontend/;
    try_files $uri $uri/ /girls/index.html;
}

location /girls/api/ {
    proxy_pass http://127.0.0.1:8000/api/;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
}
